+/* =======================================================================
+   PATCH: HOME BUTTON
+======================================================================= */
+.home-icon-btn {
+    position: fixed;
+    top: 16px;
+    left: 16px;
+    width: 44px;
+    height: 44px;
+    background: rgba(15, 31, 92, 0.88);
+    border: none;
+    border-radius: 12px;
+    display: none;
+    align-items: center;
+    justify-content: center;
+    cursor: pointer;
+    backdrop-filter: blur(6px);
+    z-index: 9999;
+    transition: background 0.25s ease, transform 0.2s ease;
+}
+
+.home-icon-btn:hover {
+    background: rgba(15, 31, 92, 1);
+    transform: scale(1.05);
+}
+
+.home-icon {
+    width: 20px;
+    height: 20px;
+    filter: invert(100%) brightness(90%);
+}
+
+
+/* =======================================================================
+   PATCH: FOOTER LINKS
+======================================================================= */
+.footerLinks {
+    margin-top: 6px;
+    font-size: 13px;
+    opacity: 0.9;
+}
+
+.footerLinks span {
+    cursor: pointer;
+    color: #0A1D40;
+    transition: opacity 0.2s ease;
+}
+
+.footerLinks span:hover {
+    text-decoration: underline;
+    opacity: 1;
+}
+
+
+/* =======================================================================
+   PATCH: STATIC PAGES
+======================================================================= */
+.staticPage {
+    display: none;
+    max-width: 720px;
+    margin: 0 auto;
+    padding: 24px 20px 100px;
+    background: #F7F9FC;
+    color: #0A1D40;
+    animation: fadeInStatic 0.35s ease;
+    min-height: 75vh;
+    line-height: 1.6;
+    font-size: 15px;
+}
+
+.staticPage h1 {
+    font-size: 24px;
+    margin-bottom: 16px;
+    font-weight: 700;
+    color: #0A1D40;
+}
+
+@keyframes fadeInStatic {
+    from { opacity: 0; transform: translateY(6px); }
+    to { opacity: 1; transform: translateY(0); }
+}
+
+
+/* =======================================================================
+   PATCH: MOBILE OPTIMIZATION
+======================================================================= */
+@media (max-width: 480px) {
+    .staticPage {
+        padding: 20px 16px 120px;
+        font-size: 14px;
+    }
+
+    .footerLinks {
+        font-size: 12px;
+        line-height: 18px;
+    }
+}
